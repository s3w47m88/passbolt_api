APP_FULL_BASE_URL=https://passbolt.example.com

# Network / proxy
PASSBOLT_SECURITY_PROXIES=*
PASSBOLT_SECURITY_SET_HEADERS=true
PASSBOLT_SSL_FORCE=true

# Registration (set to true only during first-time setup)
PASSBOLT_REGISTRATION_PUBLIC=false

# Database (MariaDB / MySQL-compatible)
DATASOURCES_DEFAULT_HOST=database
DATASOURCES_DEFAULT_PORT=3306
DATASOURCES_DEFAULT_DATABASE=passbolt
DATASOURCES_DEFAULT_USERNAME=passbolt
DATASOURCES_DEFAULT_PASSWORD=changeme
DATASOURCES_DEFAULT_DRIVER=Mysql

# Email (example uses Resend SMTP)
EMAIL_DEFAULT_FROM_NAME=Passbolt
EMAIL_DEFAULT_FROM=passbolt@example.com
EMAIL_TRANSPORT_DEFAULT_HOST=smtp.resend.com
EMAIL_TRANSPORT_DEFAULT_PORT=465
EMAIL_TRANSPORT_DEFAULT_USERNAME=resend
EMAIL_TRANSPORT_DEFAULT_PASSWORD=your-resend-api-key
EMAIL_TRANSPORT_DEFAULT_TLS=true

# JWT auth plugin (generate a strong secret)
PASSBOLT_PLUGINS_JWT_AUTHENTICATION_ENABLED=true
PASSBOLT_PLUGINS_JWT_AUTHENTICATION_SECRET_KEY=replace-with-random-32-byte-string

# GPG key locations inside the container (defaults from the Passbolt image)
PASSBOLT_GPG_SERVER_KEY_PUBLIC=/etc/passbolt/gpg/serverkey.asc
PASSBOLT_GPG_SERVER_KEY_PRIVATE=/etc/passbolt/gpg/serverkey_private.asc

# Runtime
PORT=8080
